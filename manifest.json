{
    "name": "Steam Wishlist stats",
    "version": "1.0",
    "description": "Crawl and download steam works wishlist stats file automatically",
    "manifest_version": 2,
    "background": {
        "scripts": ["back.js"],
        "persistent": true
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "permissions": ["storage", "activeTab", "declarativeContent", "https://partner.steamgames.com/*", "downloads", "file://*"],
    "page_action": {
        "default_popup": "popup.html"
    }
}
